#include <stdio.h>
#include <cs50.h>

int main(void)
{
int height;
int rows;
int spaces;
int hashes;


do
{
    printf("Choose a height between 0 and 23: ");

    height = get_int();
}
 while((height < 0) || (height > 23));

    //Testing begins
    for (rows = 1; rows <= height; rows++)
{
    for (spaces = (height - rows); spaces > 0; spaces--)
    {
        printf(" ");
    }

    for (hashes = 2; hashes <= (rows + 1); hashes++)
    {
        printf("#");
    }


{
    printf("  ");


}
 for (hashes = 2; hashes <= (rows + 1); hashes++)
    {
        printf("#");
    }

    printf("\n");
}
}
